TOPDIR = @top_srcdir@

srcdir = @srcdir@
VPATH  = @srcdir@
TOPOBJ = @TOPOBJ@

include $(TOPDIR)/Makeconf

  I =  scripts
 II =  kerndep 
III =  rpc2 util dir 
 IV =  al rp2gen portmapper pdbstuff blurb
  V =  fail vicedep partition

  VI = auth2 vv
 VII =  vol resolve venus
VIII =  advice repair guitools res
  IX =  rvmres volutil vtools
   X =  vice
  XI =  update asr egasr norton

# If you add a new module to Coda, add it to the right set above
ifneq ($(SHORTSYS),djgpp)
SUBDIRS = $(I) $(II) $(III) $(IV) $(V) $(VI) $(VII) $(VIII) $(IX) \
	  $(X) $(XI)
else
SUBDIRS = $(II) $(III) $(IV) $(V) $(VI) $(VII)
endif

include $(TOPDIR)/configs/Makerules



