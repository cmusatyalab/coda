TOPDIR = @top_srcdir@
ifndef MAKDIR
MAKDIR = @top_srcdir@
endif
srcdir = @srcdir@
VPATH  = @srcdir@
TOPOBJ = @TOPOBJ@

# Need to conditionalize this
include $(MAKDIR)/Makeconf

VENUS-SCRIPTS = vutil volmunge venus-setup

VOL-SCRIPTS	= createvol createvol_rep purgevol purgevol_rep bldvldb.sh
VICE-SCRIPTS	= startserver
REINIT-SCRIPTS	= partial-reinit.sh recreatevol recreatevol_rep
VICE-SETUP      = vice-setup vice-setup-rvm  vice-setup-scm vice-setup-srvdir vice-setup-user vice-install vice-killvolumes

BACKUP-SCRIPTS	= backup.sh tape.pl
INIT-SCRIPTS    = venus.init codasrv.init auth2.init update.init rc.vice

# all scripts
SCRIPTS := $(VENUS-SCRIPTS) $(BACKUP-SCRIPTS) $(INIT-SCRIPTS)\
	   $(VOL-SCRIPTS) $(VICE-SCRIPTS) $(REINIT-SCRIPTS)

# init scripts are installed here
BINDIR := $(INITDIR)

CBINS = venus.init
CSBINS = $(VENUS-SCRIPTS)

SBINS = codasrv.init auth2.init update.init
SSBINS = $(BACKUP-SCRIPTS) $(VICE-SCRIPTS) $(REINIT-SCRIPTS) $(VOL-SCRIPTS) $(VICE-SETUP)

include $(MAKDIR)/configs/Makerules

