# Which C compiler to use


TOPDIR= @top_srcdir@
srcdir = @srcdir@
VPATH = @srcdir@
TOPOBJ= @TOPOBJ@

include $(TOPDIR)/Makeconf


CC = cc
PLAINC = $(PLAINC?$(PLAINC):cc)
RP2GEN= ${BINDIR}/rp2gen


# Identify files of interest

# (Satya, 8/9/96): should other modules obtain the .h files in HFILES
#from the Coda compilation tree?   Or from /usr/include/cfs?  The
#latter doesn't exist on Mach, but does on NetBSD.   As an expedient
#during the port to NetBSD, I am installing all the .h files 
#Straighten this out soon....

HFILES = cfs.h  cfs_MACH.h cfs_opstats.h cfs_vnodeops.h cfsio.h cfsnc.h cnode.h mach_vioctl.h  mach_vfs.h mach_vnode.h
CFILES = pioctl.c cfsncstat.c


# cfsmount and cfsunmount are obsolete programs and have been 
# eliminated (Satya, 8/9/96)
all: pioctl.o cfsncstat

pioctl.o: pioctl.c
	$(CC) $(CFLAGS) -c pioctl.c

cfsncstat: cfsncstat.c
	$(PLAINC) $(CFLAGS) -o cfsncstat cfsncstat.c

clean:
	-rm -rf *.o cfsncstat

#------------- Installation----------------
libinstall: all
	-cd $(LIBDIR); chmod 0644 pioctl.o 
	${INSTALL} pioctl.o $(PIOCTL_O)
	-cd $(BINDIR); chmod 0755  cfsncstat
	${INSTALL} cfsncstat ${BINDIR}


hdrinstall: ${HFILES}
	-mkdir ${INCLDIR}
	-mkdir ${INCLDIR}/cfs
	-chmod 0644 ${INCLDIR}/cfs/*
	${INSTALL} $? ${INCLDIR}/cfs


srcinstall:
# Manually setenv SUPPRESS_ALPHACI if you want to suppress the RCS checkin by alphaci
	SRCDIR=$(SRCDIR); export SRCDIR; $(ALPHACI)

install: libinstall hdrinstall srcinstall 
